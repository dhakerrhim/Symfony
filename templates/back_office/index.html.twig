{% extends 'base.html.twig' %}


{% block stylesheets %}
{{parent()}}

{% endblock %}

{% block body %}

<!-- PAGE HEADER -->
<div class="page-header">
	<div>
		<h2 class="main-content-title tx-24 mg-b-5">Morrirs Charts</h2>
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="javascript:;">Charts</a></li>
			<li class="breadcrumb-item active" aria-current="page">Morrirs Charts</li>
		</ol>
	</div>
	<div class="d-flex">
		<div class="justify-content-center">
			<button type="button" class="btn btn-white btn-icon-text my-2 me-2">
				<i class="fe fe-settings"></i>
				<span>Settings</span>
			</button>
			<button type="button" class="btn btn-primary my-2 btn-icon-text">
				<i class="fe fe-download-cloud bg-white-transparent text-white"></i>
				<span>Reports</span>
			</button>
		</div>
	</div>
</div>
<!-- END PAGE HEADER -->

<!-- ROW -->
<div class="col-lg-6 col-md-6">
	<div class="card custom-card">
		<div class="card-body">
			<div>
				<h6 class="main-content-label mb-1">Travolta Satistique</h6>
			</div>
		  <div id="donut-example"></div>
		</div>
	</div>
</div>



{% endblock %}

{% block javascripts %}
	{{parent()}} 
	<!-- INTERNAL MORRIS CHART JS -->
	<script src="{{absolute_url(asset('build/plugins/raphael/raphael.min.js'))}}"></script>
    <script src="{{absolute_url(asset('build/plugins/morris.js/morris.min.js'))}}"></script>



<script> 
Morris.Donut({
  element: 'donut-example',
  data: [
    {label: "Vehicule Disponibile ", value: {{ availableCount}}},
    {label: "Vehicule Indisponibile", value: {{ unavailableCount}}},
    {label: "Locations confirmee", value: {{ confirmer}}},
	 {label: "Locations en attende", value: {{ pending}}}
  ]
});
	</script>
{% endblock %}