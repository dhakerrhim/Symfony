{% extends 'base.html.twig' %}

{% block title %}Vehicule index{% endblock %}

{% block body %}
    <h1>Vehicule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Matricule</th>
                <th>Couleur</th>
                <th>Prix</th>
                <th>Nb_place</th>
                <th>Status</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.matricule }}</td>
                <td>{{ vehicule.couleur }}</td>
                <td>{{ vehicule.prix }}</td>
                <td>{{ vehicule.nbPlace }}</td>
                <td>{{ vehicule.status }}</td>
                <td>{{ vehicule.image }}</td>
                <td>
               
                  
                    <a href="{{path('app_vehicule_delete',{'id':vehicule.id})}}" class="fe fe-trash text-danger me-2"></a>
					<a href="{{path('app_vehicule_edit',{'id':vehicule.id})}}" class="fe fe-edit text-info"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vehicule_new') }}">Create new</a>
{% endblock %}
