{% extends 'base.html.twig' %}

{% block title %}Edit Vehicule{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Vehicule</h3>
                    </div>
                    <div class="card-body">
                        {% if form.vars.errors|length > 0 %}
                            <div class="alert alert-danger">
                                {% for error in form.vars.errors %}
                                    {{ error.message }}<br>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <form method="POST" action="{{ path('app_vehicule_edit', {'id': vehicule.getId()}) }}">
                            {{ form_start(form) }}
                            <div class="form-group">
                                <label for="{{ form.marque.vars.id }}">Vehicule Marque</label>
                                {% if vehicule.getMarque() is not null %}
                                    {{ form_widget(form.marque, {'attr': {'class': 'form-control'}, 'required': false}) }}
                                {% else %}
                                    {{ form_widget(form.marque, {'attr': {'class': 'form-control'}, 'value': ''}) }}
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label for="{{ form.matricule.vars.id }}">Vehicule Matricule</label>
                                {{ form_widget(form.matricule, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="{{ form.couleur.vars.id }}">Vehicule Couleur</label>
                                {{ form_widget(form.couleur, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="{{ form.prix.vars.id }}">Prix</label>
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="{{ form.nb_place.vars.id }}">Nombre du place</label>
                                {{ form_widget(form.nb_place, {'attr': {'class': 'form-control'}}) }}
                            </div>
                               {{ form_widget(form.imageFile, {
                                'attr': {
                                    'class': 'form-control',
                                   
                                    'name': 'imageFile',
                                    'id': 'formFile'
                                }
                            }) }}
                            <div class="form-group">
                                <label for="{{ form.status.vars.id }}">Status</label>
                                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <button type="submit" class="btn btn-primary">Edit Vehicule</button>
                            {{ form_end(form) }}
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_vehicule_index') }}" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
