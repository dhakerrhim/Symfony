{% extends 'base.html.twig' %}

{% block title %}Create Location{% endblock %}

{% block body %}
<div class="container-fluid">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">Create Location</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="{{ path('app_location_new') }}">
            {{ form_start(form) }}
            <div class="form-group">
              <label for="{{ form.debut_location.vars.id }}">Debut Location</label>
              {{ form_widget(form.debut_location, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.debut_location) %}
              <div class="alert alert-danger">{{ form_errors(form.debut_location) }}</div>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="{{ form.fin_location.vars.id }}">Fin Location</label>
              {{ form_widget(form.fin_location, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.fin_location) %}
              <div class="alert alert-danger">{{ form_errors(form.fin_location) }}</div>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="{{ form.destination.vars.id }}">Destination</label>
              {{ form_widget(form.destination, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.destination) %}
              <div class="alert alert-danger">{{ form_errors(form.destination) }}</div>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="{{ form.montant.vars.id }}">Montant</label>
              {{ form_widget(form.montant, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.montant) %}
              <div class="alert alert-danger">{{ form_errors(form.montant) }}</div>
              {% endif %}
            </div>
            <div class="form-group">
              <label for="{{ form.status.vars.id }}">Status</label>
              {{ form_widget(form.status, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.status) %}
              <div class="alert alert-danger">{{ form_errors(form.status) }}</div>
              {% endif %}
            </div>
           <div class="form-group">
                                <label for="{{ form.client_id.vars.id }}">Client(s)</label>
                                {{ form_widget(form.client_id, {'attr': {'class': 'form-control'}, 'required': false, 'multiple': true}) }}
                                {% if form_errors(form.client_id) %}
                                    <div class="alert alert-danger">{{ form_errors(form.client_id) }}</div>
                                {% endif %}
                            </div>
            <div class="form-group">
              <label for="{{ form.vehicule_id.vars.id }}">Vehicule</label>
              {{ form_widget(form.vehicule_id, {'attr': {'class': 'form-control'}, 'required': false}) }}
              {% if form_errors(form.vehicule_id) %}
              <div class="alert alert-danger">{{ form_errors(form.vehicule_id) }}</div>
              {% endif %}
            </div>
            <button type="submit" class="btn btn-primary">Create Location</button>
                 {{ form_end(form) }}
                        </form>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_location_index') }}" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}