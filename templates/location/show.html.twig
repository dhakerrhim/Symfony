{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Debut_location</th>
                <td>{{ location.debutLocation ? location.debutLocation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fin_location</th>
                <td>{{ location.finLocation ? location.finLocation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ location.destination }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ location.montant }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ location.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_location_index') }}">back to list</a>

    <a href="{{ path('app_location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
